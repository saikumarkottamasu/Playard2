<resources>

    <!-- Base application theme. -->
    

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:timePickerDialogTheme">@style/Time.Theme</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
  		<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>
	<style name="Time.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#33cbf6</item>
        <item name="android:textColorPrimary">#33cbf6</item>
    	<item name="android:fontFamily">"TwCenMTStd"</item>

    </style>

    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
	  <item name="android:fontFamily">"TwCenMTStd"</item>
	  <item name="android:textSize">14dp</item>
	  <item name="android:height">100dp</item>
	</style>

	<style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
	    <item name="android:textColor">#363f4d</item>
	    <item name="android:textSize">14dp</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:fontFamily">TwCenMTStd</item>
	    
	</style>
</resources>




